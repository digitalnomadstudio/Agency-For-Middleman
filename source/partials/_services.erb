<section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Services</h2>
                    <h3 class="section-subheading text-muted">Enamel pin affogato woke listicle.</h3>
                </div>
            </div>
            <div class="row text-center">
            <% data.services.services.each do |s| %>
                <div class="col-md-6">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-<%= s.icon %> fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading"><%= s.service %></h4>
