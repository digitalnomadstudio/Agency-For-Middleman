<section id="portfolio" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Portfolio</h2>
                    <h3 class="section-subheading text-muted">Cray fam fixie, iPhone hoodie.</h3>
                </div>
            </div>
            <div class="row">
            <% page_articles.each_with_index do |article, i| %>
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <a href="#portfolioModal<%= article.data.id %>" class="portfolio-link" data-toggle="modal">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img src="img/portfolio/<%= article.data.image %>" class="img-responsive" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4><%= article.data.title %></h4>
                        <p class="text-muted"><%= article.data.category %></p>
                    </div>
                </div>
            <% end %>
            </div>
        </div>
    </section>